rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // --- Правила для Заявок ---
    // Эти правила остаются без изменений. Они разрешают вашему серверу
    // добавлять заявки, но запрещают любые действия из браузера.
    match /submissions/{submissionId} {
      allow create: if true;
      allow read, update, delete: if false;
    }

    // --- НОВОЕ ПРАВИЛО для Новостей ---
    // Разрешаем ЛЮБОМУ пользователю (даже неавторизованному) читать список новостей.
    // Это безопасно, т.к. новости - это публичная информация.
    // Запись, изменение и удаление новостей из браузера по-прежнему запрещены.
    match /news/{newsId} {
      allow read: if true;
      allow write: if false;
    }
  }
}
